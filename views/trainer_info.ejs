<html>
  <head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/index.css' />
    <title>Pokemon</title>
    <script src="https://use.fontawesome.com/44d41c7531.js"></script>

  </head>
  <body>
    <div class='top-nav'>
      <li><a href="/trainers">Trainers</a></li>
      <li><a href="/pokemon">Pokemon</a></li>
      <li><a href="/gym"><%= trainerObj.name %></a></li>
    </div>
    <div class="main">
      Trainer : <%= trainerObj.name %><br>
      <h2><%= trainerObj.name %>'s Pokemon </h2>
      <ol>
      <% for(i=0;i< pokemonObj.length; i++){ %>
        <li>Pokemon ID: <a href="/pokemon/<%= pokemonObj[i].id %>"><%= pokemonObj[i].id %> </a><br>
          Pokemon Name: <%= pokemonObj[i].name %> </li><hr>

      <% }%>
    </ol>

    </div>

  </body>
</html>
